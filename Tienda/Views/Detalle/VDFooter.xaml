<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tienda.Views.Detalle.VDFooter">
    <Grid>
        <Frame HorizontalOptions="Center" 
               CornerRadius="50" 
               Margin="18" 
               HasShadow="False"
               Padding="8">
            <Frame.Background>
                <LinearGradientBrush StartPoint="1,0">
                    <GradientStop Color="#B7A4FF" 
                                  Offset="0.5"/>
                    <GradientStop Color="#8866FE" 
                                  Offset="1.0"/>
                </LinearGradientBrush>
            </Frame.Background>
            <Grid ColumnDefinitions="auto, *,auto">
                <Label Text="Comprar" 
                       Grid.Column="1" 
                       VerticalOptions="Center" 
                       HorizontalOptions="CenterAndExpand" 
                       FontSize="18" 
                       Margin="10,0" 
                       TextColor="White" 
                       FontAttributes="Bold"/>
            </Grid>
        </Frame>
    </Grid>
</ContentView>